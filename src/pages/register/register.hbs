<div class="register-container">

    <div class="panel animated fadeInDown">
        <div class="panel-header">Create a GeoBoard account</div>

        <form id="registerForm">
            <div class="panel-body">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" placeholder="Choose a unique username">
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" placeholder="name@domain.com">
                </div>
            </div>

            <div class="panel-body">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="Choose a strong password">
                </div>

                <div class="form-group">
                    <label for="password">Confirm password</label>
                    <input type="password" id="password-confirm" placeholder="Confirm your passsword">
                </div>

            </div>

            <div class="panel-body pb-0">
                <div class="terms checkbox">
                    <input id="terms" type="checkbox">
                    <label for="terms">I agree to the <span class="link ml-1" data-target="terms">terms of
                            service</span>.</label>
                </div>

                <div class="validation-error"></div>
            </div>

            <div class="panel-footer">
                <div class="button-group">
                    <button class="button button-green button-pd-2" data-target="register">Create account</button>
                    <button class="button button-link button-pd-2" data-target="login">I have an account</button>
                </div>
            </div>
        </form>
    </div>

</div>
