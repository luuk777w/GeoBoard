<div class="side-nav animated">
    <div class="side-nav-header">
        <h4 class="m-0">Menu</h4>
        <span class="close-sidebar" data-target="closeSidebar" title="Close sidebar">
            <i class="fas fa-times fa-lg"></i>
        </span>
    </div>

    <!-- My boards -->
    <div class="side-nav-body">
        {{> alert display="false" }}

        <div class="side-nav-section">
            <div class="section-header">

                <div class="section-header-section">
                    <h3 class="side-nav-section-title side-nav-my-boards">My boards</h3>
                    <button class="button button-small button-green" data-target="toggleCreateBoard">Create board</button>
                </div>

                <div class="section-header-section create-board-section" style="display: none;">
                    <input type="text" name="boardName">
                    <button class="button button-small button-green create-board-button" data-target="createBoard"><i class="fa fa-check"></i></button>
                </div>

            </div>

            {{#if boards}}
            <ul class="board-list">
                {{#each boards}}
                <li class="board-list-item{{#ifEquals ../selectedBoard id}} active{{/ifEquals}}" data-target="board" data-board-id="{{id}}">{{name}}
                    {{#ifEquals ../currentUser userId}}
                        <i title="You own this bord" class="fas fa-crown is-owner fa-fw ml-1"></i>
                    {{/ifEquals}}

                    {{#ifEquals ../currentUser userId}}
                        <div class="board-list-item-description">Created at <time datetime="{{../createdAt}}">{{formatDateTime ../createdAt}}</time></div>
                    {{else}}
                        <div class="board-list-item-description">Created by {{../owner.username}}</div>
                    {{/ifEquals}}
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="side-nav-text">You don't own any boards. Create one!</p>
            {{/if}}
        </div>

        {{!-- <!-- Active boards -->
        <div class="side-nav-section">
            <div class="section-header">
                <h3 class="side-nav-section-title">Active boards</h3>
            </div>

            {{#if activeBoards}}
            <ul class="board-list">
                {{#each activeBoards}}
                <li class="board-list-item{{#ifEquals ../selectedBoard id}} active{{/ifEquals}}" data-target="board" data-board-id="{{id}}">{{name}}
                    <div class="board-list-item-description">Created by {{owner.username}}</div>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="side-nav-text">You are not part of any board.</p>
            {{/if}}
        </div> --}}

        <!-- Snapshots -->
        <div class="side-nav-section">
            <div class="section-header">
                <h3 class="side-nav-section-title">My snapshots</h3>
            </div>

            {{#if snapshots}}
            <ul class="board-list">
                {{#each snapshots}}
                <li class="board-list-item" data-target="board" data-board-id="{{id}}">{{name}}
                    <div class="board-list-item-description">Created at <time datetime="{{createdAt}}">{{formatDateTime createdAt}}</time></div>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="side-nav-text">No snapshots available.</p>
            {{/if}}
        </div>
    </div>
</div>
