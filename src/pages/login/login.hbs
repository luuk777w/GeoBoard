<div class="login-container">

    {{> alert }}

    <div class="panel animated fadeInDown">
        <div class="panel-header">Login to GeoBoard</div>

        <form id="loginForm">
            <div class="panel-body">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-prefix">
                            <i class="fa fa-user"></i>
                        </div>
                        <input type="text" id="username" name="username" placeholder="Username" autofocus>
                    </div>
                    <div class="validation-error" data-field="username"></div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-prefix">
                            <i class="fa fa-lock"></i>
                        </div>
                        <input type="password" id="password" name="password" placeholder="Password">
                    </div>
                    <div class="validation-error" data-field="password"></div>
                </div>

                <div class="remember checkbox">
                    <input id="remember" type="checkbox" name="remember">
                    <label for="remember">Remember me</label>
                </div>

                <div class="validation-error"></div>
            </div>

            <div class="panel-footer">
                <div class="button-group">
                    <button type="submit" class="button button-green button-pd-2 login-button">Login</button>
                    <button class="button button-link button-pd-2" data-target="recover-password">Reset password</button>
                </div>

                <p class="register-information pt-1">No account yet? <span data-target="register">Create one here</span></p>
            </div>
        </form>
    </div>

</div>
